<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rate_layout_bg"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"

        android:text="@string/app_Title"
        android:textSize="20sp"
        android:textColor="@color/rate_text_fg"
        android:textStyle="bold"
    />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        style="@style/date_range"
        android:id="@+id/date_rate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/date_rate"
        android:gravity="center"
        android:layout_gravity="center"

        />





</LinearLayout>
    <SearchView
        android:id="@+id/rates_sv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rates_rv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />







</LinearLayout>